@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div id="index-main-container" class="text-center">
        <h1 class="display-4">Welcome to our volunteering website!</h1>
        <div>
            <button 
                    class="btn btn-outline-danger btn-lg index-main-button" 
                    onclick="window.location.href='/Projects?place=@Const.Place.home'"
                    >Volunteer from home</button>

            <button 
                    class="btn btn-outline-warning btn-lg index-main-button" 
                    onclick="window.location.href='/Projects?place=@Const.Place.romania'"
                    >Volunteer in Romania</button>

            <button 
                    class="btn btn-outline-info btn-lg index-main-button" 
                    onclick="window.location.href='/Projects?place=@Const.Place.abroad'"
                    >Volunteer abroad</button>
        </div>
    </div>
